---
import './TabGroup.css';
import UIString from '../UIString.astro';
import { getLanguageFromURL } from '../../util';

const currentPage = new URL(Astro.request.url).pathname;
const lang = getLanguageFromURL(currentPage);
const segments = currentPage.split('/');
---
<div class="TabGroup no-flex pull-wide">
	<a href={`/${lang}/deploy/netlify#netlify/`} class={segments.includes('netlify') ? 'active' : ''}>
		Netlify
	</a>
	<a href={`/${lang}/deploy/vercel#vercel/`} class={segments.includes('vercel') ? 'active' : ''}>
		Vercel
	</a>
	<a href={`/${lang}/deploy/other#github-pages/`} class={segments.includes('other') ? 'active' : ''}>
		Other Hosts
	</a>
</div>